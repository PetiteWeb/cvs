.popup
    position fixed
    max-height calc(100vh - 40px)
    width calc(100vw - 40px)
    padding 30px 10px 9px
    z-index 100
    background-color c-grey-low
    box-sizing border-box
    display none
    flex-direction column
    border 1px solid c-grey-text
    border-radius 10px
    gap 20px
    .btn
        height 45px
    @media (min-width 480px)
        padding 30px 20px 18px
        .btn
            height 55px
    @media (min-width 768px)
        padding 30px 30px 28px
    &.active
        display flex
    &.popup-auth
        @media(min-width 768px)
            width 600px
    &.popup-chart
        @media(min-width 1341px)
            width 1300px
    &.popup-settings
    &.popup-pairs
        @media(min-width 768px)
            width 640px
            max-width 640px
.popup-close
    square(30px)
    position absolute
    cursor pointer
    top 10px
    right 10px
    background url(img/icons/close.svg) no-repeat center / contain
    @media (min-width 480px)
        top 20px
        right 20px
.popup-caption
    text-align center
    font-size 24px
    @media (min-width 480px)
        font-size 32px
    @media (min-width 768px)
        padding-bottom 10px
    @media (min-width 1341px)
        font-size 40px
.popup-form
    flex(flex-start, stretch, column)
    gap 20px
.form-block
    flex(flex-start, stretch, column)
    gap 10px
    label
        padding-left 15px
        font-weight 600
.form-capcha
    display grid
    grid-template-columns 30px 1fr auto 80px
    align-items center
    gap 10px
    .capcha
        background url(img/capcha.png) no-repeat right bottom / cover
        height 45px
        border-radius 10px
        @media (min-width 480px)
            height 55px
        @media (min-width 768px)
            height 70px
    .upd
        square(30px)
        background url(img/icons/update.svg) no-repeat center / contain
        @media (min-width 768px)
            margin-left 15px;
    .inp
        text-align center
    .text-orange
        font-size 25px
    @media (min-width 480px)
        gap 12px
        grid-template-columns 38px 1fr auto 140px
    @media (min-width 768px)
        gap 18px
        grid-template-columns 47px 1fr auto 140px
.popup-link
    align-self center
    width max-content
    text-align center
    line-height 1
    border-bottom 1px solid
    font-size 14px
.popup-footer
    display grid
    align-items center
    grid-template-columns repeat(2, 1fr)
    .btn
        width 100px
        justify-self flex-end
        @media (min-width 480px)
            width 150px
