-let path = "."
doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-widthz")
        link(rel="stylesheet" href="style.css")
    body.home-page
        header.container.main-header
            a.main-header__logo(href="")
                img(src=path+"/img/icons/logo.svg" alt="CVS")
            div.main-header__lang.lang
                span.lang__text ru
                button.lang__arrow
            nav.main-header__menu.menu
                a.menu__link.telegram(href="")
