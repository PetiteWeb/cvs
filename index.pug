                        |&#32;trading pairs
                li.infoblock__item
                    img(src=path+"/img/icons/gear.svg" alt="flexible search settings")
                    .infoblock__text.text-3 flexible search settings
                li.infoblock__item
                    img(src=path+"/img/icons/diagram.svg" alt="Charts")
                    .infoblock__text.text-3 Charts
                li.infoblock__item
                    img(src=path+"/img/icons/bell.svg" alt="Sound alerts")
                    .infoblock__text.text-3 Sound alerts
            ul.partners
