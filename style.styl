.docs
    display grid
    gap 50px
    margin-bottom 50px
    @media (min-width 768px)
        gap 70px
        margin-bottom 70px
.text-block
    padding 30px 20px
    display grid
    gap 40px

    @media (min-width 1000px)
        padding 40px 25px
    @media (min-width 1341px)
        padding 50px
.table-to-card::after
    content " card"
    @media (min-width 768px)
        content " table"
.rad
    border-radius 10px

.pair-block
    display grid
    gap 10px
    overflow auto
.pair-block__item
    flex(space-between, center)
    padding 10px 10px 10px 20px
    background-color c-grey
    border-radius 10px
    .pairs
        gap 10px
    @media (min-width 480px)
        padding-top 12px
        padding-bottom 12px
    @media (min-width 768px)
        padding-left 25px
        padding-right 25px
.settings-header
    display grid
    grid-template-columns auto 82px 80px
    gap 10px
    padding 10px 10px 0
    @media (min-width 480px)
        grid-template-columns auto 100px 100px
        gap 20px
    @media (min-width 768px)
        grid-template-columns auto 120px 120px 130px
        padding 0 15px 0
    :not(:first-child)
        text-align center
    @media (max-width 767px)
        :last-child
            display none
.settings-block
    overflow auto
    display grid
    gap 10px
.settings-block__item
    display grid
    background-color c-grey
    border-radius 10px
    padding 20px 10px
    grid-template-columns auto 82px 80px
    gap 20px 10px
    align-items center
    :first-child
        justify-self center
        margin-right 20px
    .inp
        justify-self center
        height 45px
        box-sizing border-box
        &:nth-of-type(1)
            width 60px
    .btn
        grid-column-end span 3
    @media (min-width 480px)
        grid-template-columns auto 100px 100px
        gap 20px
        .inp
            height 50px
            &:nth-of-type(1)
                width 80px
    @media (min-width 768px)
        grid-template-columns 1fr 120px 120px 130px
        padding 15px
        //gap 30px
        .btn
            grid-column-end span 1
        .inp
            width 100px
            &:nth-of-type(1)
                width 100px
        :first-child
            //justify-self flex-start
            margin-right 0
.docs .popup-settings
    display flex
    position relative
    border 3px solid c-grey
    margin auto
    z-index 0
.chart-header
    display flex
    flex-direction column
    gap 15px
    .time
        display flex
        justify-content space-between
        gap 10px
        @media (min-width 1000px)
            gap 20px
    @media (min-width 768px)
        flex-direction row
        justify-content space-between
        align-items center
.chart-timeline
    left 20px
    right 20px
    bottom 10px
    overflow-y auto
    position absolute
    @media (min-width 1000px)
        left 40px
        right 40px
    .timeline
        min-width 100%
        width max-content
        border-top 2px solid c-orange
        display flex
        justify-content space-between
    .date
        display inline-flex
        justify-content flex-start
        align-items center
        flex-direction column
        width 70px
        &:not(:last-child)
            margin-right 10px
        &:first-child
            width 37px
            align-items flex-start
        &:last-child
            width 37px
            align-items flex-end
        &::before
            content ""
            border 1px solid c-orange
            border-radius 2px
            background-color c-orange
            height 10px
            box-sizing border-box

