@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

@import "css/var.styl"
@import "css/mixins.styl"
@import "css/popup.styl"
@import "css/alerts.styl"

:root
    --c-white c-white
    --c-orange c-orange
    --c-grey-text c-grey-text
    --c-grey-input c-grey-input
    --c-grey c-grey
    --c-grey-low c-grey-low
    --c-green c-green
    --c-red c-red

body
    font-family "Poppins", sans-serif
    background-color c-grey
    min-height 100vh
    margin 0
    color c-white
    &.home-page
        background-image url(img/bg.jpg)
        background-repeat no-repeat
        background-position center
        background-size cover
    &.hidden
        overflow hidden
a
    color inherit
    text-decoration none
button
    outline none
    cursor pointer
    border none
    background transparent
ul
    list-style none
    margin 0
    padding 0
h1
    margin 0
    font-weight 600
h2
    margin 0
    font-weight 600
p
    margin 0
.home-page
    flex(space-around, stretch, column)
.container
    padding-left 20px
    padding-right 20px
    @media (min-width 1341px)
        padding-left calc(50% - 650px)
        padding-right calc(50% - 650px)
.btn
    height 44px
    outline none
    border none
    border-radius 10px
    background-color c-orange
    color c-white
    font-weight 600
    font-size 17px
    box-sizing border-box
    flex(center)
    &.btn-dark
        background-color c-grey
    &.outline
        border 2px solid c-white
        background transparent
    &.square
        square(44px)
    &.btn_arrow
        &::after
            content ""
            background url(img/icons/arrow.svg) no-repeat center / contain
            square(12px)
            transform rotate(-90deg)
    &.btn_chart
        &::before
            content ""
            background url(img/icons/diagram-w.svg) no-repeat center / contain
            square(30px)
    @media (min-width 768px)
        height 55px
        &.square
            square(55px)
.text-orange
    color c-orange
.text-green
    color c-green
.text-red
    color c-red
.text-bold
    font-weight 600
.text-1 // Заголовок
    font-size 18px
    @media (min-width 480px)
        font-size 24px
    @media (min-width 768px)
        font-size 32px
    @media (min-width 1341px)
        font-size 40px
.text-2 // Абзац под заголовком
    font-size 14px
    @media (min-width 480px)
        font-size 16px
    @media (min-width 1341px)
        font-size 20px
.text-3 // Карточки
    font-size 10px
    @media (min-width 386px)
        font-size 11px
    @media (min-width 480px)
        font-size 14px
    @media (min-width 768px)
        font-size 16px
    @media (min-width 1341px)
        font-size 17px
.text-4 // Текст как футер
    font-size 11px
    @media (min-width 480px)
        font-size 16px
    @media (min-width 1341px)
        font-size 25px
.text-5
    font-size 14px
    @media (min-width 480px)
        font-size 16px
    @media (min-width 480px)
        font-size 17px
.text-6
    font-size 11px
    @media (min-width 480px)
        font-size 14px
.text-7
    font-size 16px
    @media (min-width 1000px)
        font-size 20px
.p-1 // абзац с текстом под заголовком
    max-width 320px
    @media (min-width 480px)
        max-width 446px
    @media (min-width 1341px)
        max-width 536px
.inp
    width 100%
    height 45px
    outline none
    border none
    box-sizing border-box
    padding 10px 15px
    border-radius 10px
    background-color c-grey-input
    font-family inherit
    font-size 11px
    color inherit
    @media (min-width 480px)
        height 55px
        font-size 16px
    @media (min-width 480px)
        font-size 17px
::placeholder
    color c-grey-text
@import "css/header.styl"

main
    flex(center, center, column)
    text-align center
    gap 20px
.home-page h1
    max-width 320px
    @media (min-width 480px)
        max-width 440px
    @media (min-width 768px)
        max-width 580px
    @media (min-width 1000px)
        max-width 100%
.infoblock
    flex-w(center, flex-start, row, flex-start)
    gap 10px 0
    width 100%
    @media (min-width: 430px)
        gap 10px
    @media (min-width 480px)
        margin-top 20px
    @media (min-width 768px)
        flex-wrap nowrap
        justify-content space-between
    @media (min-width 1000px)
        margin-top 30px
    @media (min-width 1341px)
        margin-top 35px
.infoblock__item
    width calc(100% / 3)
    max-width 128px
    img
        height 27px
        line-height 1
        margin-bottom 5px
    @media (min-width: 430px)
        width calc((100% - 20px) / 3)
        max-width 190px
    @media (min-width 768px)
        width calc((100% - 40px) / 5)
        max-width 190px
        img
            height 39px
            margin-bottom 7px
    @media (min-width 1341px)
        img
            height 53px
.partners
    width 100%
    flex-w(center,center,row,center)
    margin-top 25px
    margin-bottom 25px
    gap 20px 10px
    @media (min-width 768px)
        margin-top 37px
        margin-bottom 37px
        gap 36px 20px
    @media (min-width 1000px)
        width 820px
        margin-top 44px
        margin-bottom 44px
        gap 30px 20px
    @media (min-width 1321px)
        width 1230px
        margin-top 55px
        margin-bottom 55px
        gap 28px 20px
.partners__item
    width calc(25% - 30px / 4)
    flex(center, center)
    img
        width 100%
    @media (min-width 430px)
        width calc((100% - 50px) / 6)
    @media (min-width 768px)
        width calc((100% - 100px) / 6)
.auth-menu
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 20px
    width 100%
    @media (min-width 768px)
        width auto
        .btn
            width 300px
    @media (min-width 1000px)
        gap 40px
.footer-text
    text-align center
    @media (min-width 1000px)
        padding-top 96px
        padding-bottom 100px
