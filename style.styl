@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

@import "css/var.styl"
@import "css/mixins.styl"
@import "css/popup.styl"
@import "css/alerts.styl"

:root
    --c-white c-white
    --c-orange c-orange
    --c-grey-text c-grey-text
    --c-grey-input c-grey-input
    --c-grey c-grey
    --c-grey-low c-grey-low
    --c-green c-green
    --c-red c-red

body
    font-family "Poppins", sans-serif
    background-color c-grey
    min-height 100vh
    margin 0
    color c-white
    &.home-page
        background-image url(img/bg.jpg)
        background-repeat no-repeat
        background-position center
        background-size cover
    &.hidden
        overflow hidden
a
    color inherit
    text-decoration none
button
    outline none
    cursor pointer
    border none
    background transparent
ul
    list-style none
    margin 0
    padding 0
ol
    list-style-position inside
    margin 0
    padding 0

*
    scrollbar-width thin
    scrollbar-color transparent c-white
*::-webkit-scrollbar
    width 2px
    height 2px
*::-webkit-scrollbar-track
    background transparent
*::-webkit-scrollbar-thumb
    background-color transparent
    border-radius 10px
    border 2px solid c-white
.bg_light
    background-color c-grey-low
.home-page
    flex(space-around, stretch, column)
.container
    padding-left 20px
    padding-right 20px
    @media (min-width 1341px)
        padding-left calc(50% - 650px)
        padding-right calc(50% - 650px)
.arrow::after
        content ""
        background url(img/icons/arrow.svg) no-repeat center / contain
        square(12px)
.arrow_top::after
    transform rotate(180deg)
.arrow_right::after
    transform rotate(-90deg)
.arrow_left::after
    transform rotate(90deg)

