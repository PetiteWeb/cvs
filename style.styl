.text-7
    font-size 16px
    @media (min-width 1000px)
        font-size 20px

.p-1 // абзац с текстом под заголовком
    max-width 320px
    @media (min-width 480px)
        max-width 446px
    @media (min-width 1341px)
        max-width 536px
.inp
    width 100%
    height 45px
    outline none
    border none
    box-sizing border-box
    padding 10px 15px
    border-radius 10px
    background-color c-grey-input
    font-family inherit
    color inherit
    @media (min-width 480px)
        height 55px
        font-size 16px
    @media (min-width 480px)
        font-size 17px
::placeholder
    color c-grey-text
main
    flex(center, center, column)
    gap 20px
.home-page h1
    max-width 320px
    @media (min-width 480px)
        max-width 440px
    @media (min-width 768px)
        max-width 580px
    @media (min-width 1000px)
        max-width 100%
.infoblock
    flex-w(center, flex-start, row, flex-start)
    gap 10px 0
    width 100%
    @media (min-width: 430px)
        gap 10px
    @media (min-width 480px)
        margin-top 20px
    @media (min-width 768px)
        flex-wrap nowrap
        justify-content space-between
    @media (min-width 1000px)
        margin-top 30px
    @media (min-width 1341px)
        margin-top 35px
.infoblock__item
    width calc(100% / 3)
    max-width 128px
    img
        height 27px
        line-height 1
        margin-bottom 5px
    @media (min-width: 430px)
        width calc((100% - 20px) / 3)
        max-width 190px
    @media (min-width 768px)
        width calc((100% - 40px) / 5)
        max-width 190px
        img
            height 39px
            margin-bottom 7px
    @media (min-width 1341px)
        img
            height 53px
.partners
    width 100%
    flex-w(center,center,row,center)
    margin-top 25px
    margin-bottom 25px
    gap 20px 10px
    @media (min-width 768px)
        margin-top 37px
        margin-bottom 37px
        gap 36px 20px
    @media (min-width 1000px)
        width 820px
        margin-top 44px
        margin-bottom 44px
        gap 30px 20px
    @media (min-width 1321px)
        width 1230px
        margin-top 55px
        margin-bottom 55px
        gap 28px 20px
.partners__item
    width calc(25% - 30px / 4)
    flex(center, center)
    img
        width 100%
    @media (min-width 430px)
        width calc((100% - 50px) / 6)
    @media (min-width 768px)
        width calc((100% - 100px) / 6)
.auth-menu
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 20px
    width 100%
    @media (min-width 768px)
        width auto
    @media (min-width 1000px)
        gap 40px
